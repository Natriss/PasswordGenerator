<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PasswordGenerator.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PasswordGenerator.Maui"
    Shell.FlyoutBehavior="Disabled"
    xmlns:views="clr-namespace:PasswordGenerator.Maui.Views"
    xmlns:strings="clr-namespace:PasswordGenerator.Maui.Localizations"
    Title="{x:Static strings:AppResource.AppTitle}">

    <ShellContent ContentTemplate="{DataTemplate views:MainPage}">
        <ShellContent.Icon>
            <FontImageSource FontFamily="Segoe Icons" Glyph="&#xE80F;" />
        </ShellContent.Icon>
    </ShellContent>

</Shell>
